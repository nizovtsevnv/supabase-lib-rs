# Justfile for Supabase Rust Client Library

# Default recipe
default: check

# Show all available commands
help:
    @just --list

# Run all pre-commit checks
check: format lint test build audit

# Setup pre-commit hooks
setup-precommit:
    @echo "üîß Setting up pre-commit hooks..."
    ./scripts/setup-precommit.sh

# Run pre-commit hooks manually
precommit-run:
    @echo "üîß Running pre-commit hooks..."
    pre-commit run --all-files

# Run specific pre-commit hook
precommit-run-hook HOOK:
    @echo "üîß Running pre-commit hook: {{HOOK}}"
    pre-commit run {{HOOK}}

# Update pre-commit hooks to latest versions
precommit-update:
    @echo "üì¶ Updating pre-commit hooks..."
    pre-commit autoupdate

# Install pre-commit hooks
precommit-install:
    @echo "üì¶ Installing pre-commit hooks..."
    pre-commit install
    pre-commit install --hook-type commit-msg

# Format code
format:
    @echo "üîß Formatting code..."
    cargo fmt

# Format code and check if changes were made
format-check:
    @echo "üîß Checking code formatting..."
    cargo fmt --check

# Run clippy linter
lint:
    @echo "üîç Running clippy linter..."
    cargo clippy --lib --all-features -- -D warnings

# Run tests (unit tests + documentation tests)
test:
    @echo "üß™ Running unit tests..."
    cargo test --lib
    @echo "üìñ Running documentation tests..."
    cargo test --doc

# Run tests with output
test-verbose:
    @echo "üß™ Running tests (verbose)..."
    cargo test -- --nocapture

# Run integration tests (requires Supabase)
test-integration:
    @echo "üß™ Running integration tests..."
    @if [ -z "${SUPABASE_URL}" ] || [ -z "${SUPABASE_ANON_KEY}" ]; then \
        echo "‚ö†Ô∏è  Integration tests require Supabase configuration"; \
        echo "   Run: just supabase-start"; \
        echo "   Or set SUPABASE_URL and SUPABASE_ANON_KEY environment variables"; \
        exit 1; \
    fi
    cargo test --test integration_tests --features "auth database storage realtime native" -- --nocapture

# Run unit tests only
test-unit:
    @echo "üß™ Running unit tests..."
    cargo test --lib --bins

# Run all tests (unit + doc + integration)
test-all: test supabase-ensure-running test-integration
    @echo "‚úÖ All tests completed!"

# =============================================================================
# Supabase Docker Management
# =============================================================================

# Start local Supabase with Docker/Podman
supabase-start:
    @echo "üê≥ Starting local Supabase..."
    @if command -v podman-compose > /dev/null 2>&1; then \
        podman-compose up -d; \
    elif command -v docker-compose > /dev/null 2>&1; then \
        docker-compose up -d; \
    elif command -v docker > /dev/null 2>&1 && docker compose > /dev/null 2>&1; then \
        docker compose up -d; \
    else \
        echo "‚ùå No Docker/Podman Compose found"; \
        echo "   Install Docker Compose or Podman"; \
        exit 1; \
    fi
    @echo "‚è≥ Waiting for services to be ready..."
    @sleep 10
    @echo "‚úÖ Supabase is starting up!"
    @echo "üåê Studio: http://localhost:54323"
    @echo "üîó API: http://localhost:54321"

# Stop local Supabase
supabase-stop:
    @echo "üõë Stopping local Supabase..."
    @if command -v podman-compose > /dev/null 2>&1; then \
        podman-compose down; \
    elif command -v docker-compose > /dev/null 2>&1; then \
        docker-compose down; \
    elif command -v docker > /dev/null 2>&1 && docker compose > /dev/null 2>&1; then \
        docker compose down; \
    else \
        echo "‚ùå No Docker/Podman Compose found"; \
        exit 1; \
    fi

# Restart local Supabase
supabase-restart: supabase-stop supabase-start

# Show Supabase status
supabase-status:
    @echo "üìä Supabase containers status:"
    @if command -v podman-compose > /dev/null 2>&1; then \
        podman-compose ps; \
    elif command -v docker-compose > /dev/null 2>&1; then \
        docker-compose ps; \
    elif command -v docker > /dev/null 2>&1 && docker compose > /dev/null 2>&1; then \
        docker compose ps; \
    else \
        echo "‚ùå No Docker/Podman Compose found"; \
    fi

# Show Supabase logs
supabase-logs service="":
    @echo "üìã Supabase logs {{service}}..."
    @if command -v podman-compose > /dev/null 2>&1; then \
        podman-compose logs -f {{service}}; \
    elif command -v docker-compose > /dev/null 2>&1; then \
        docker-compose logs -f {{service}}; \
    elif command -v docker > /dev/null 2>&1 && docker compose > /dev/null 2>&1; then \
        docker compose logs -f {{service}}; \
    else \
        echo "‚ùå No Docker/Podman Compose found"; \
    fi

# Clean Supabase volumes and data
supabase-clean: supabase-stop
    @echo "üßπ Cleaning Supabase data..."
    @if command -v podman-compose > /dev/null 2>&1; then \
        podman-compose down -v; \
    elif command -v docker-compose > /dev/null 2>&1; then \
        docker-compose down -v; \
    elif command -v docker > /dev/null 2>&1 && docker compose > /dev/null 2>&1; then \
        docker compose down -v; \
    else \
        echo "‚ùå No Docker/Podman Compose found"; \
    fi
    @echo "‚úÖ Supabase data cleaned"

# Ensure Supabase is running (for tests)
supabase-ensure-running:
    @echo "üîç Checking if Supabase is running..."
    @if ! curl -s http://localhost:54321 > /dev/null 2>&1; then \
        echo "‚ö†Ô∏è  Supabase not running, starting it..."; \
        just supabase-start; \
        sleep 15; \
    else \
        echo "‚úÖ Supabase is running"; \
    fi

# Run documentation tests only
test-doc:
    @echo "üìñ Running documentation tests..."
    cargo test --doc

# Run tests with coverage
coverage:
    @echo "üìä Running tests with coverage..."
    cargo tarpaulin --out Html --output-dir coverage

# Build the project
build:
    @echo "üî® Building project..."
    cargo build

# Build in release mode
build-release:
    @echo "üî® Building project (release)..."
    cargo build --release

# Security audit
audit:
    @echo "üîí Running security audit..."
    cargo audit

# Check dependencies for issues
deny:
    @echo "üö´ Checking dependencies..."
    cargo deny check

# Update dependencies
update:
    @echo "‚¨ÜÔ∏è Updating dependencies..."
    cargo update

# Check for outdated dependencies
outdated:
    @echo "üìÖ Checking for outdated dependencies..."
    cargo outdated

# Clean build artifacts
clean:
    @echo "üßπ Cleaning build artifacts..."
    cargo clean

# Watch for file changes and run tests
watch:
    @echo "üëÄ Watching for changes..."
    cargo watch -x test

# Watch for file changes and run specific command
watch-cmd cmd:
    @echo "üëÄ Watching for changes and running: {{cmd}}"
    cargo watch -x "{{cmd}}"

# Generate documentation
docs:
    @echo "üìö Generating documentation..."
    cargo doc --no-deps --open

# Generate documentation without opening browser
docs-build:
    @echo "üìö Generating documentation..."
    cargo doc --no-deps

# Run benchmarks
bench:
    @echo "üìà Running benchmarks..."
    cargo bench

# Analyze binary size
bloat:
    @echo "üìè Analyzing binary size..."
    cargo bloat --release

# Install development tools
install-tools:
    @echo "üîß Installing development tools..."
    cargo install cargo-audit cargo-deny cargo-outdated cargo-edit cargo-watch cargo-tarpaulin cargo-bloat cargo-sweep

# Run example
example name:
    @echo "üöÄ Running example: {{name}}"
    cargo run --example {{name}}

# Run all examples
examples:
    @echo "üöÄ Running all examples..."
    @for example in basic_usage auth_example database_example storage_example realtime_example; do \
        echo "Running example: $example"; \
        cargo run --example $example || true; \
    done

# Setup development environment
setup:
    @echo "üõ†Ô∏è Setting up development environment..."
    @if [ ! -f Cargo.lock ]; then echo "Generating Cargo.lock..."; cargo generate-lockfile; fi
    @echo "‚úÖ Development environment ready!"

# Pre-commit hook (run before committing)
pre-commit: format-check lint test build
    @echo "‚úÖ All pre-commit checks passed!"

# Release preparation
release-prep: clean format lint test build-release audit docs-build
    @echo "üì¶ Release preparation complete!"

# Legacy Supabase CLI commands (alternative)
supabase-cli-start:
    @echo "üöÄ Starting Supabase via CLI..."
    @if command -v supabase >/dev/null 2>&1; then \
        supabase start; \
    else \
        echo "‚ùå Supabase CLI not found. Install from: https://supabase.com/docs/guides/cli"; \
        echo "   Or use: just supabase-start (Docker version)"; \
    fi

supabase-cli-stop:
    @echo "üõë Stopping Supabase via CLI..."
    @if command -v supabase >/dev/null 2>&1; then \
        supabase stop; \
    else \
        echo "‚ùå Supabase CLI not found."; \
    fi

# Reset local Supabase
supabase-reset:
    @echo "üîÑ Resetting local Supabase..."
    @if command -v supabase >/dev/null 2>&1; then \
        supabase db reset; \
    else \
        echo "‚ùå Supabase CLI not found."; \
    fi

# Nix-specific commands

# Build with Nix
nix-build:
    @echo "‚ùÑÔ∏è Building with Nix..."
    nix build

# Run checks with Nix
nix-check:
    @echo "‚ùÑÔ∏è Running Nix flake checks..."
    nix flake check

# Update Nix flake inputs
nix-update:
    @echo "‚ùÑÔ∏è Updating Nix flake inputs..."
    nix flake update

# Enter development shell
nix-shell:
    @echo "‚ùÑÔ∏è Entering Nix development shell..."
    nix develop

# Show flake info
nix-info:
    @echo "‚ùÑÔ∏è Showing flake information..."
    nix flake show

# ========================
# üßπ CLEANUP COMMANDS (cargo-sweep)
# ========================

# Check what would be cleaned (dry-run)
sweep-dry:
    @echo "üßπ Checking what would be cleaned..."
    cargo sweep -m 1GB -d

# Clean old build artifacts (keep target under 1GB)
sweep:
    @echo "üßπ Cleaning old build artifacts..."
    cargo sweep -m 1GB
    @echo "‚úÖ Cleanup completed!"
    @du -sh target/ || echo "target/ folder not found"

# Aggressive clean - remove entire target directory
sweep-all:
    @echo "üßπ Removing entire target directory..."
    rm -rf target/
    @echo "‚úÖ Complete cleanup done!"

# Clean artifacts older than specified days
sweep-old DAYS="7":
    @echo "üßπ Cleaning artifacts older than {{DAYS}} days..."
    cargo sweep -t {{DAYS}}
    @echo "‚úÖ Cleanup completed!"
    @du -sh target/ || echo "target/ folder not found"

# Show current target directory size
target-size:
    @echo "üìä Current target directory size:"
    @du -sh target/ 2>/dev/null || echo "target/ folder not found"

# ========================
# üîß ENHANCED COMMANDS
# ========================

# Enhanced check with cleanup
check-sweep: sweep check

# Enhanced test with cleanup
test-sweep: sweep test-all

# Full development cycle with cleanup
dev-cycle: sweep format lint test build
    @echo "‚úÖ Full development cycle completed with cleanup!"
